- model_class = FosterHome
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @foster_home.name
%p
  %strong= model_class.human_attribute_name(:address) + ':'
  %br
  = @foster_home.address
%p
  %strong= model_class.human_attribute_name(:animals) + ':'
  %br
  = @foster_home.animals.pluck(:name).join(", ")

= link_to t('.back', :default => t("helpers.links.back")), foster_homes_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_foster_home_path(@foster_home), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), foster_home_path(@foster_home), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
