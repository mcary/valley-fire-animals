= form_for @foster_home, html: { class: "form form-horizontal foster_home" } do |f|
  .form-group
    = f.label :name, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :name, class: 'form-control', required: true
    = f.error_span(:name)
  .form-group
    = f.label :address, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :address, class: 'form-control', required: true
    = f.error_span(:address)
  .form-group
    = f.label "Animals you can board", class: 'control-label col-lg-2'
    .col-lg-10
      %fieldset#dayArray
        .btn-group{"data-toggle" => "buttons"}
          - for animal in Animal.all do
            %label.btn.btn-default{:class=>@foster_home.animals.include?(animal) ? "active" : "", style:' -webkit-border-radius: 0 !important;-moz-border-radius: 0 !important;border-radius: 0 !important; margin:5px;'}
              %input{name: "[foster_home]animals[]", type: "checkbox", id:"foster_home_animal_#{animal.name}", value:animal.id, checked:@foster_home.animals.include?(animal)}
              =animal.name
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), foster_homes_path, :class => 'btn btn-default'
