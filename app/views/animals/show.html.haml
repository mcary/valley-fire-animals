- model_class = Animal
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @animal.name


= link_to t('.back', :default => t("helpers.links.back")), animals_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_animal_path(@animal), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), animal_path(@animal), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
